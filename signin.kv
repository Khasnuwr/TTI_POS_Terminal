<SigninWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0.06,0.45,0.45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "ACCESS CONTROL"
            bold: True
            size_hint_x: 1
    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x, 10
        #spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: username_field
                hint_text: "USERNAME"
                multiline: False
                focus: True
                on_text_validate: password_field.focus = True
            TextInput:
                id: password_field
                hint_text: "PASSWORD"
                password: True
                multiline: False
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Log In"
            size_hint_y: None
            height: 40
            background_color: (0.06,0.45,0.45,1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2
